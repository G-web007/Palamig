@model Category

<div class="container py-5">
    <div class="card-title">
        <h3>Delete Category</h3>
    </div>
    <hr class="p-3" />
    <div class="card rounded shadow mx-auto col-sm-12 col-md-12s col-lg-12 p-3">
        <div class="card-body">
            <form method="post">
                <p class="text-center text-danger">Are you sure you want to delete it?</p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label m-0"></label>
                    <input asp-for="Name" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label m-0"></label>
                    <input asp-for="Quantity" class="form-control" disabled>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6 col-lg-6 col-sm-6">
                        <button type="submit" class="btn btn-danger form-control rounded">Delete</button>
                    </div>
                    <div class="col-6 col-md-6 col-lg-6  col-sm-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control rounded">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
