@model IEnumerable<Product>

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary rounded"><i class="bi bi-plus-circle"></i> Add Product</a>
        </div>
    </div>
</div>
<hr class="p-3" />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-danger text-center" role="alert">
        <strong>No Data Available.</strong>
    </div>
}
else
{
    <table id="tblData" class="table table-bordered table-hover table-striped shadow">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Brand Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.ProductName</td>
                    <td>@obj.Description</td>
                    <td>@obj.Price</td>
                    <td>@obj.BrandName</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2 rounded d-flex"><i class="bi bi-pencil-square px-1"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded d-flex"><i class="bi bi-trash3-fill px-1"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

