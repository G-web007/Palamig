@model Product

<div class="container py-5">
    <div class="card-title">
        <h3>Delete Product</h3>
    </div>
    <hr class="p-3" />
    <div class="card rounded shadow mx-auto col-sm-12 col-md-12s col-lg-12 p-3">
        <div class="card-body">
            <h5 class="text-danger text-center">Are you sure you want to delete it?</h5>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label m-0"></label>
                    <input asp-for="ProductName" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label m-0"></label>
                    <input asp-for="Description" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="BrandName" class="form-label m-0"></label>
                    <input asp-for="BrandName" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="ListPrice" class="form-label m-0"></label>
                    <input asp-for="ListPrice" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label m-0"></label>
                    <input asp-for="Price" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="Price50" class="form-label m-0"></label>
                    <input asp-for="Price50" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label asp-for="Price100" class="form-label m-0"></label>
                    <input asp-for="Price100" class="form-control" disabled>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6 col-lg-6  col-sm-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border border-warning form-control rounded">
                            <i class="bi bi-arrow-return-left"></i>
                        </a>
                    </div>
                    <div class="col-6 col-md-6 col-lg-6 col-sm-6">
                        <button type="submit" class="btn btn-danger form-control rounded"> <i class="bi bi-trash3"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
